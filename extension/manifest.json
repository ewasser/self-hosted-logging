{
  "manifest_version": 2,
  "name": "Self Hosted Logging",
  "version": "1.0",

  "description": "Logs all Youtube links to a self-hosted end point for further processing.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "*://*/*",
    "webRequest",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{3f93d471-753d-443c-86db-6af5ba211e20}"
    }
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": ["borderify.js"]
    }
  ]
}
