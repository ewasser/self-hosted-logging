{% extends "base.jinja2" %}

{% block container %}

<div class="columns">
  <div class="column is-1">
  </div>
  <div class="column is-10">
    <h1 class="title">{{ page.title }}</h1>
    <table class="table is-striped">
  <thead>
    <tr>
      <th><abbr title="ID">#</abbr></th>
      <th>Title</th>
      <th><abbr title="Timestamp">TS</abbr></th>
      <th><abbr title="Preview">Image</abbr></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><abbr title="ID">#</abbr></th>
      <th>Title</th>
      <th><abbr title="Timestamp">TS</abbr></th>
      <th><abbr title="Preview">Image</abbr></th>
    </tr>
  </tfoot>
  <tbody>
    {% for row in rows %}
    <tr>
      <th>{{ row.id }}</th>
      <td><a href="{{ row.link }}" title="{{ row.title }}">{{ row.title }} / {{  row.kind }}</a></td>
      <td>{{ row.mtime }}</td>
      <td>
{% if row.kind == 'VIDEO' %}
<figure class="image"><img src="{{ url_for('youtube.thumbnail', youtubehit_id=row.thumbnail.id) }}"></figure></td>
{% endif %}
    </tr>
    {% endfor %}
  </tbody>
</table>
  </div>
  <div class="column is-1">
  </div>
</div>

{% endblock %}
